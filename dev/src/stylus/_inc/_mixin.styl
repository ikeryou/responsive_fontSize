

// position
m_position($position = absolute, $top = 0px, $left = 0px, $bottom = auto, $right = auto)
  position: $position
  top: $top
  left: $left
  bottom: $bottom
  right: $right

// size
m_size($w, $h)
  width: $w
  height: $h

// size 100%
m_size_full()
  width: 100%
  height: 100%

// absolute使った中央配置
m_center($w, $h)
  width: $w
  height: $h
  position: absolute
  top: 50%
  left: 50%
  margin-left: ($w * -0.5)
  margin-top: ($h * -0.5)

// 背景画像
m_bgimg($src, $w, $h, $repeat = no-repeat)
  background-repeat: $repeat
  background-image: $src
  background-size: $w $h

// 背景画像 サイズ固定
m_bgImgFix($src, $w = 100%, $h = 100%)
  m_bgimg($src, $w, $h)
  m_size($w, $h)

// ボーダー
m_border($size, $color = #FFFFFF)
  border: $size solid $color

// アスペクト比固定
m_aspFixSVG($w, $h)
  position: relative
  width: $w

  &:before
    content: ''
    display: block
    padding-top: (($h / $w) * 100)%

  & svg
    position: absolute
    top: 0
    left: 0
    right: 0
    bottom: 0

// テスト用のボーダー
trigger_on()
  border: 1px solid #FF0000
  box-sizing:border-box
